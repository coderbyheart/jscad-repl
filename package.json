{
  "name": "@coderbyheart/jscad-repl",
  "version": "0.0.0-development",
  "description": "Develop 3D models in VS Code using JSCAD.",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderbyheart/jscad-repl.git"
  },
  "bugs": {
    "url": "https://github.com/coderbyheart/jscad-repl/issues"
  },
  "homepage": "https://github.com/coderbyheart/jscad-repl#readme",
  "keywords": [
    "web-app",
    "vite",
    "JSCAD"
  ],
  "author": "Markus Tacker <m@coderbyheart.com> | https://coderbyheart.com",
  "license": "MIT",
  "dependencies": {
    "@commitlint/config-conventional": "18.4.4",
    "@jscad/core": "2.6.7",
    "@jscad/modeling": "2.12.0",
    "@jscad/regl-renderer": "2.6.7",
    "@jscad/stl-serializer": "2.1.15",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.21.2"
  },
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "13.1.8",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "17.0.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-no-restricted-imports": "0.0.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "50.0.1",
    "handlebars": "4.7.8",
    "vite": "5.0.11"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts,.jsx"
    ],
    "*.{md,json,yaml,yml,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc"
}
